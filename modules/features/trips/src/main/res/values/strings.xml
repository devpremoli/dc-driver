    <string name="trip_details_event_dialog_distraction_description_bulletpoint_2">The phone is moving</string>
    <string name="trip_details_event_dialog_distraction_description_bulletpoint_3">The car is moving</string>
    <string name="trip_details_event_dialog_distraction_description_part_2">These factors indicate that the driver’s eyes and attention are away from the road.</string>

